conky.config = {
	-- Performance optimizations
	background = true,
	update_interval = 10, -- Reduced from 1 to 2 for less CPU usage
	cpu_avg_samples = 2,
	net_avg_samples = 2,
	double_buffer = true,
	no_buffers = true,
	imlib_cache_size = 0,

	-- Window settings for i3 compatibility
	own_window = true,
	own_window_type = "override", -- Changed from 'desktop' for better i3 compatibility
	own_window_transparent = false, -- We'll use ARGB for better transparency
	own_window_argb_visual = true,
	own_window_argb_value = 50, -- Adjust transparency (0-255)
	own_window_class = "Conky",
	-- Window settings for proper layering
	own_window_hints = "below,undecorated,sticky,skip_taskbar,skip_pager",
	own_window_argb_visual = true, -- Required for transparency
	own_window_argb_value = 0, -- 0 = fully transparent (adjust as needed)
	-- Positioning
	alignment = "left",
	gap_x = 34,
	gap_y = 0,
	minimum_width = 250,

	-- Appearance
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	use_xft = true,
	font = "DejaVu Sans Mono:size=16",
	uppercase = false,
	override_utf8_locale = true,

	-- Colors (using more i3-friendly colors)
	default_color = "#FFFFFF",
	color0 = "#FFFFFF", -- White
	color1 = "#FF8225", -- Nordic orange
	color2 = "#A3BE8C", -- Nordic green
}

conky.text = [[
${alignc}${time %a %d %b %Y}${hr 1}${color}
${alignc}${time %H:%M:%S}

${color1}SYSTEM ${hr 1}${color}
Host: ${alignr}${nodename}
Kernel: ${alignr}${kernel}
Uptime: ${alignr}${uptime_short}

${color1}CPU ${hr 1}${color}
${cpu cpu0}% ${alignr}${freq_g} GHz
${cpubar cpu0 10,100}${color}

${color1}MEMORY ${hr 1}${color}
RAM: $memperc% ${alignr}${mem}/${memmax}
${membar 10,100}
SWAP: $swapperc% ${alignr}${swap}/${swapmax}
${swapbar 10,100}

${color1}DISK ${hr 1}${color}
/: ${fs_used /}/${fs_size /} ${alignr}${fs_free_perc /}% free
${fs_bar 10,100 /}

${color1}NETWORK ${hr 1}${color}
Down: ${downspeed enp0s31f6} ${alignr}Up: ${upspeed  enp0s31f6}
Total: ${totaldown enp0s31f6} ${alignr}${totalup  enp0s31f6}
]]
